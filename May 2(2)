ind={}
n=int(input('enter no of players'))
for i in range(1+n+1):
    l=[]
    pno=int(input('enter player num'))
    pname=int(input('enter player name'))
    matches=int(input('enter no of matches'))
    runs=int(input('hoew many runs '))
    l.append(matches)
    l.append(runs)
    ind[pno]=l
print(ind)
pno=int(input('enter player no details'))
print('player num:'ind[pno][0])
print('player name:'ind[pno][1])
print('no of matches:'ind[pno][2])
