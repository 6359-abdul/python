def find_max_min(numbers):
    max_num = numbers[0]
    min_num = numbers[0]
    
    for num in numbers:
        if num > max_num:
            max_num = num
        if num < min_num:
            min_num = num
    
    print("Maximum number:", max_num)
    print("Minimum number:", min_num)

# Example usage
numbers = [5, 9, 3, 1, 7, 2]
find_max_min(numbers)
